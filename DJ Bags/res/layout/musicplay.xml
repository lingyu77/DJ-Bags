<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"    
    android:background="@drawable/listener"
    >
  
  	<ImageButton
		  android:id="@+id/play"
		  android:layout_width="160px"
		  android:layout_height="100px"
		  android:layout_marginTop="620px"
		  android:layout_marginLeft="160px" 
		  android:background="@drawable/threebtn"> 
  	 </ImageButton>
  	  
  	 <ImageButton
		  android:id="@+id/forward"
		  android:layout_width="160px"
		  android:layout_height="100px"
		  android:layout_marginTop="620px"
		  android:layout_marginLeft="0px" 
		  android:background="@drawable/threebtn"  
  	  ></ImageButton>
  	  
  	 <ImageButton
		  android:id="@+id/next"
		  android:layout_width="160px"
		  android:layout_height="100px"
		  android:layout_marginTop="620px"
		  android:layout_marginLeft="320px" 
		  android:background="@drawable/threebtn"  
  	  ></ImageButton>
  	  
  	  <ImageButton
		  android:id="@+id/email"
		  android:layout_width="100px"
		  android:layout_height="80px"
		  android:layout_marginTop="0px"
	      android:layout_marginLeft="370px"
		  android:background="@drawable/topright"  
      /> 
           	 	 
  	 <TextView
  	  android:id="@+id/welcome"
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content"
	  android:textColor="#FFFFFFFF"
      android:textSize="38px"
  	  ></TextView>
  	  
  	  <TextView
  	  android:id="@+id/state"
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content"
	  android:layout_marginTop="560px"
	  android:layout_marginLeft="50px"
  	  ></TextView>
  	  
  	  <TextView
  	  android:id="@+id/dj"
	  android:layout_width="440px"
	  android:layout_height="wrap_content"
	  android:textColor="#000000"
	  android:layout_marginTop="450px"
	  android:layout_marginLeft="40px" 
	  android:textSize="30px"
  	  ></TextView> 	  
  	  
      <ImageView
	  android:id="@+id/showpic"
	  android:layout_width="400px"
	  android:layout_height="300px"
	  android:layout_marginTop="120px"
	  android:layout_marginLeft="40px" 
      ></ImageView>
 				
</RelativeLayout>
