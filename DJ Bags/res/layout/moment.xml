<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"    
    android:background="@drawable/context"
    >
    <ImageView 
		 android:id="@+id/weather" 
		 android:layout_width="100px" 
		 android:layout_height="100px"
		 android:layout_marginTop="250px" 
		 android:layout_marginLeft="360px" 
	 ></ImageView>
     
	<TextView
		android:id="@+id/time"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="#000000"
		android:textSize="30px"
		android:layout_marginTop="250px"
		android:layout_marginLeft="10px" 
	></TextView>
	
	 <TextView
		android:id="@+id/year"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="#000000"
		android:textSize="55px"
		android:layout_marginTop="100px"
		android:layout_marginLeft="360px"
	></TextView>
	 
	<TextView
		android:id="@+id/month"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="#000000"
		android:textSize="50px"
		android:layout_marginTop="150px"
		android:layout_marginLeft="380px"
	></TextView>
	
	<TextView
		android:id="@+id/day"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="#000000"
		android:textSize="190px"
		android:layout_marginTop="100px"
		android:layout_marginLeft="150px"
	></TextView>
	
	<TextView
		android:id="@+id/week"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="#000000"
		android:textSize="30px"
		android:layout_marginTop="280px"
		android:layout_marginLeft="250px"
	></TextView>		    
	
	<TextView
		android:id="@+id/season"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="#000000"
		android:textSize="30px"
		android:layout_marginTop="280px"
		android:layout_marginLeft="10px"
	></TextView>
	
	<TextView
		android:id="@+id/location"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="#000000"
		android:textSize="30px"
		android:layout_marginTop="350px"
	></TextView>
	
	<TextView
		android:id="@+id/song"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="#000000"
		android:textSize="30px"
		android:layout_marginTop="470px"
		android:text = "正在播放:"
	></TextView>
	
    <TextView
		android:id="@+id/state"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="#000000"
		android:textSize="50px"
		android:layout_marginTop="510px"
	></TextView>    
  	  
  	<ImageButton
		  android:id="@+id/play"
		  android:layout_width="160px"
		  android:layout_height="100px"
		  android:layout_marginTop="620px"
		  android:layout_marginLeft="160px" 
		  android:background="@drawable/threebtn"> 
  	 </ImageButton>
  	  
  	 <ImageButton
		  android:id="@+id/forward"
		  android:layout_width="160px"
		  android:layout_height="100px"
		  android:layout_marginTop="620px"
		  android:layout_marginLeft="0px" 
		  android:background="@drawable/threebtn"  
  	  ></ImageButton>
  	  
  	 <ImageButton
		  android:id="@+id/next"
		  android:layout_width="160px"
		  android:layout_height="100px"
		  android:layout_marginTop="620px"
		  android:layout_marginLeft="320px" 
		  android:background="@drawable/threebtn"  
  	  ></ImageButton>  	  
   
 	  <ImageButton
		  android:id="@+id/email"
		  android:layout_width="100px"
		  android:layout_height="80px"
		  android:layout_marginTop="0px"
	      android:layout_marginLeft="370px"
		  android:background="@drawable/topright"  
      /> 
      
 	 <ImageButton
		  android:id="@+id/forward"
		  android:layout_width="160px"
		  android:layout_height="100px"
		  android:layout_marginTop="620px"
		  android:layout_marginLeft="0px" 
		  android:background="@drawable/threebtn"  
  	  ></ImageButton>
  	  
  	 <ImageButton
		  android:id="@+id/next"
		  android:layout_width="160px"
		  android:layout_height="100px"
		  android:layout_marginTop="620px"
		  android:layout_marginLeft="320px" 
		  android:background="@drawable/threebtn"  
  	  ></ImageButton>
    
</RelativeLayout>

    